<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="4dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="4dp"
              android:weightSum="1"

             tools:context="com.example.davidalaw.bsllearningtool.mFragments.QuizFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/score_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/score"
            android:textColor="@color/colourText"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/score_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
    </RelativeLayout>

    <net.protyposis.android.mediaplayer.VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:padding="8dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="133dp">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RadioButton
                android:id="@+id/choiceA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colourText"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/choiceB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colourText"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/choiceC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colourText"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/choiceD"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colourText"
                android:textSize="16sp"/>
        </RadioGroup>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/next_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>



</LinearLayout>
